---
import '~/assets/styles/tailwind.css';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />

    <style is:inline>
      /* Critical above-the-fold styles to prevent FOUC while main CSS loads async */
      body { margin: 0; font-family: 'Inter Variable', system-ui, sans-serif; -webkit-font-smoothing: antialiased; }
      .bg-page { background-color: var(--aw-color-bg-page, #fff); }
      .text-default { color: var(--aw-color-text-default, #1f2937); }
      .text-muted { color: var(--aw-color-text-muted, rgba(31,41,55,0.66)); }
      [no-intersect] { opacity: 0; }
    </style>

    <script is:inline>
      // Make main stylesheet non-render-blocking
      document.addEventListener('DOMContentLoaded', function() {
        var links = document.querySelectorAll('link[rel="stylesheet"]');
        links.forEach(function(link) {
          if (link.href && link.href.includes('/_astro/')) {
            link.media = 'print';
            link.onload = function() { this.media = 'all'; };
          }
        });
      });
    </script>
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <BasicScripts />
  </body>
</html>
