---
export interface SpokeCard {
  title: string;
  description: string;
  href: string;
  icon?: string;
}

export interface Props {
  title?: string;
  cards: SpokeCard[];
}

const { title = 'Deep Dives in This Guide', cards = [] } = Astro.props;

const iconMap: Record<string, string> = {
  review: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  comparison: 'M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4',
  salary: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  career: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  default: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
};
---

<div class="not-prose my-10">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">{title}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {cards.map((card) => {
      const iconPath = iconMap[card.icon || 'default'] || iconMap.default;
      return (
        <a
          href={card.href}
          class="group flex items-start gap-4 rounded-xl border border-gray-200 bg-white p-5 transition hover:border-primary/30 hover:shadow-md"
        >
          <div class="flex-shrink-0 mt-0.5 rounded-lg bg-green-50 p-2.5 group-hover:bg-primary/10 transition">
            <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={iconPath} />
            </svg>
          </div>
          <div>
            <h3 class="text-base font-semibold text-gray-900 group-hover:text-primary transition">{card.title}</h3>
            <p class="text-sm text-gray-500 mt-1">{card.description}</p>
          </div>
        </a>
      );
    })}
  </div>
</div>
