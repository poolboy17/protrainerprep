---
import { Icon } from 'astro-icon/components';

import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import Breadcrumbs from '~/components/blog/Breadcrumbs.astro';
import ArticleSchema from '~/components/blog/ArticleSchema.astro';
import AuthorBio from '~/components/blog/AuthorBio.astro';

import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';
import { getBreadcrumbs } from '~/utils/breadcrumbs';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;

const breadcrumbItems = getBreadcrumbs(post.slug, post.title);
---

<ArticleSchema
  title={post.title}
  description={post.excerpt}
  publishDate={post.publishDate}
  updateDate={post.updateDate}
  author={post.author}
  image={typeof post.image === 'string' ? post.image : undefined}
  url={String(url)}
  category={post.category?.title}
/>

<!-- Hero header — dark navy -->
<div class="bg-[#0f172a] pt-8 sm:pt-12 pb-8 border-b-[3px] border-[#16a34a]">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    <Breadcrumbs items={breadcrumbItems} />

    <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading mt-2 text-white">
      {post.title}
    </h1>

    <p class="mt-4 mb-5 text-lg md:text-xl text-gray-300 leading-relaxed">
      {post.excerpt}
    </p>

    <!-- Meta bar -->
    <div class="flex flex-wrap items-center gap-x-3 gap-y-1.5 text-sm text-gray-400">
      <span class="flex items-center gap-1.5">
        <Icon name="tabler:calendar" class="w-4 h-4 text-gray-500" />
        <time datetime={String(post.publishDate)}>{getFormattedDate(post.publishDate)}</time>
      </span>
      {
        post.author && (
          <span class="flex items-center gap-1.5">
            <span class="text-gray-600">·</span>
            <Icon name="tabler:user" class="w-4 h-4 text-gray-500" />
            <span>{post.author}</span>
          </span>
        )
      }
      {
        post.category && (
          <span class="flex items-center gap-1.5">
            <span class="text-gray-600">·</span>
            <a
              href={getPermalink(post.category.slug, 'category')}
              class="flex items-center gap-1 text-green-400 hover:text-green-300 hover:underline font-medium"
            >
              <Icon name="tabler:tag" class="w-3.5 h-3.5" />
              {post.category.title}
            </a>
          </span>
        )
      }
      {
        post.readingTime && (
          <span class="flex items-center gap-1.5">
            <span class="text-gray-600">·</span>
            <Icon name="tabler:clock" class="w-4 h-4 text-gray-500" />
            <span>{post.readingTime} min read</span>
          </span>
        )
      }
    </div>
  </div>
</div>

<section class="mx-auto">
  <article>
    <!-- Hero image -->
    {
      post.image ? (
        <div class="-mt-2">
          <Image
            src={post.image}
            class="max-w-full lg:max-w-[900px] mx-auto mb-6 sm:rounded-md bg-gray-400 dark:bg-slate-700 shadow-lg"
            widths={[400, 900]}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post?.excerpt || ''}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        </div>
      ) : (
        <div class="max-w-3xl mx-auto px-4 sm:px-6 mt-6">
          <div class="border-t dark:border-slate-700" />
        </div>
      )
    }

    <!-- Article body — links are indigo, not green -->
    <div
      class="article-body mx-auto px-6 sm:px-6 max-w-3xl prose prose-md lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-img:rounded-md prose-img:shadow-lg mt-8 prose-headings:scroll-mt-[80px] prose-li:my-0"
    >
      <slot />
    </div>
    <div class="mx-auto px-6 sm:px-6 max-w-3xl">
      <AuthorBio author={post.author} />
    </div>
    <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
    </div>
    <div class="border-t border-gray-200 dark:border-slate-700 mt-8 pt-6">
      <SocialShare url={url} text={post.title} class="text-gray-500 dark:text-slate-600" />
    </div>
  </article>
</section>

<style is:global>
  /* LINKS — indigo, not green */
  .article-body a {
    color: #4f46e5 !important;
    text-decoration-color: #c7d2fe;
  }
  .article-body a:hover {
    color: #4338ca !important;
    text-decoration-color: #4338ca;
  }

  /* H2 BANDS — alternating indigo / slate / dark+indigo */
  .article-body > h2:nth-of-type(3n+1) {
    background: #eef2ff;
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    padding: 0.875rem 1.5rem 0.625rem;
    border-radius: 0 0.5rem 0.5rem 0;
    border-left: 4px solid #4f46e5;
    color: #312e81;
  }

  .article-body > h2:nth-of-type(3n+2) {
    background: #f1f5f9;
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    padding: 0.875rem 1.5rem 0.625rem;
    border-radius: 0 0.5rem 0.5rem 0;
    border-left: 4px solid #475569;
    color: #1e293b;
  }

  .article-body > h2:nth-of-type(3n+3) {
    background: #0f172a;
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    padding: 1rem 1.5rem 0.75rem;
    border-radius: 0.5rem;
    border-left: 4px solid #6366f1;
    color: #e0e7ff !important;
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .article-body > h2:nth-of-type(3n+1) {
      background: rgba(79, 70, 229, 0.1);
      border-left-color: #818cf8;
      color: #c7d2fe;
    }
    .article-body > h2:nth-of-type(3n+2) {
      background: rgba(51, 65, 85, 0.3);
      border-left-color: #64748b;
      color: #e2e8f0;
    }
    .article-body > h2:nth-of-type(3n+3) {
      background: rgba(15, 23, 42, 0.8);
      border-left-color: #818cf8;
      color: #e0e7ff;
    }
    .article-body a {
      color: #818cf8 !important;
    }
    .article-body a:hover {
      color: #a5b4fc !important;
    }
  }

  /* Inline images spacing */
  .article-body > p > img {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>
