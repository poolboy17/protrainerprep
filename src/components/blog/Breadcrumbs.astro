---
/**
 * Breadcrumbs component with JSON-LD structured data.
 * Renders breadcrumb navigation + BreadcrumbList schema.
 * 
 * The hierarchy follows logical structure (not URL paths):
 *   Home → Pillar → Sub-Hub → Spoke
 */

export interface BreadcrumbItem {
  label: string;
  href: string;
}

export interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Build JSON-LD BreadcrumbList
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    "item": new URL(item.href, "https://protrainerprep.com").toString(),
  })),
};
---

<nav aria-label="Breadcrumb" class="max-w-3xl mx-auto px-4 sm:px-6 mb-4">
  <ol class="flex flex-wrap items-center gap-1 text-sm text-gray-500 dark:text-gray-400">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && <span class="mx-1.5 text-gray-300 dark:text-gray-600">/</span>}
        {index < items.length - 1 ? (
          <a href={item.href} class="hover:text-primary-600 hover:underline transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-gray-700 dark:text-gray-300 font-medium">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
