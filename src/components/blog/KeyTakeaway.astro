---
export interface Props {
  title?: string;
}

const { title = 'Key Takeaway' } = Astro.props;
---

<div class="not-prose my-8 rounded-xl border-l-4 border-[#4f46e5] bg-[#eef2ff] p-5">
  <p class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-[#4f46e5] mb-2">
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    {title}
  </p>
  <div class="text-base text-gray-800 leading-relaxed [&>p]:mb-2 [&>p:last-child]:mb-0">
    <slot />
  </div>
</div>
