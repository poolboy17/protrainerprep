---
/**
 * Author bio card displayed at the bottom of articles.
 * Strengthens E-E-A-T signals for this YMYL-adjacent fitness content.
 */
import { Icon } from 'astro-icon/components';

export interface Props {
  author?: string;
}

const { author = 'Pro Trainer Prep' } = Astro.props;
---

