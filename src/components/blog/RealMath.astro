---
export interface Props {
  title?: string;
}

const { title = 'The Real Math' } = Astro.props;
---

<div class="not-prose my-8 rounded-xl border border-gray-200 bg-gray-50 p-5">
  <div class="flex items-center gap-2 mb-3">
    <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>
    <p class="text-sm font-bold uppercase tracking-widest text-gray-700">{title}</p>
  </div>
  <div class="text-sm text-gray-700 leading-relaxed font-mono [&>p]:mb-2 [&>p:last-child]:mb-0 [&_strong]:text-gray-900">
    <slot />
  </div>
</div>
