---
export interface Props {
  title?: string;
}

const { title = 'Pro Tip' } = Astro.props;
---

<div class="not-prose my-6 rounded-xl border border-amber-200 bg-amber-50/50 p-5">
  <p class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-amber-700 mb-2">
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>
    {title}
  </p>
  <div class="text-sm text-gray-700 leading-relaxed [&>p]:mb-2 [&>p:last-child]:mb-0">
    <slot />
  </div>
</div>
