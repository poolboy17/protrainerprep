---
export interface ActionStep {
  title: string;
  description: string;
}

export interface Props {
  steps: ActionStep[];
}

const { steps = [] } = Astro.props;
---

<div class="not-prose my-8 space-y-4">
  {steps.map((step, i) => (
    <div class="flex items-start gap-4 rounded-xl border border-indigo-100 bg-white p-5 shadow-sm">
      <div class="flex-shrink-0 flex items-center justify-center w-10 h-10 rounded-full bg-[#4f46e5] text-white font-bold text-lg">
        {i + 1}
      </div>
      <div>
        <h3 class="text-base font-bold text-gray-900">{step.title}</h3>
        <p class="text-sm text-gray-600 mt-1 leading-relaxed">{step.description}</p>
      </div>
    </div>
  ))}
</div>
