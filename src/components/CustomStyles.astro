---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 168 107);
    --aw-color-secondary: rgb(0 140 90);
    --aw-color-accent: rgb(0 200 120);

    --aw-color-text-heading: rgb(17 24 39);
    --aw-color-text-default: rgb(31 41 55);
    --aw-color-text-muted: rgb(31 41 55 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(0 200 120 / 20%);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 200 120);
    --aw-color-secondary: rgb(0 168 107);
    --aw-color-accent: rgb(0 220 140);

    --aw-color-text-heading: rgb(247 248 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  /* Disable intersection observer fade animations â€” content should be visible immediately */
  [no-intersect] {
    opacity: 1 !important;
    transform: none !important;
  }
  .motion-safe\:md\:opacity-0 {
    opacity: 1 !important;
  }
  .motion-safe\:md\:intersect\:animate-fade {
    animation: none !important;
    opacity: 1 !important;
    transform: none !important;
  }
  [class*="intersect:"] {
    opacity: 1 !important;
    transform: none !important;
    animation: none !important;
  }
</style>
